<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#f6fcff"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lxc.quanmingtvapp.activity.AboutOurActivity">
    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:onClick="onClick"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageback_aboutour"
            android:src="@mipmap/btn_back_pressed"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于我们"
            android:textSize="30dp"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <ImageView
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:src="@mipmap/img_rec_logo"
        />
    <TextView
        android:id="@+id/textversion_aboutour"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#bdc2c5"
        android:textSize="20dp"
        android:text="全民TV 2.1.3"
        />
    <TextView
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#aeb1b3"
        android:textSize="20dp"
        android:text="商务合作:bd@qmtv.com"
        />
    <TextView
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#aeb1b3"
        android:textSize="20dp"
        android:text="官方网址:www.quanmin.tv"
        />
</LinearLayout>
