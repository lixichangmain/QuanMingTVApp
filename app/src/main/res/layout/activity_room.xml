<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".activity.RoomActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:onClick="onClick"
            android:clickable="true"
            android:id="@+id/backimage_roomactivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/btn_back_pressed" />

       <android.support.design.widget.TabLayout

           android:id="@+id/title_roomactivity"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerInParent="true"
           app:tabSelectedTextColor="#ffff0000"
           >

       </android.support.design.widget.TabLayout>
    </RelativeLayout>
  <android.support.v4.view.ViewPager
      android:id="@+id/viewpager_roomactivity"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

  </android.support.v4.view.ViewPager>
</LinearLayout>
